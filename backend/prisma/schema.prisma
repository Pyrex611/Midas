generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  company   String?
  position  String?
  status    LeadStatus @default(NEW)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([email])
}

enum LeadStatus {
  NEW              // initial outreach pending
  CONTACTED        // first email sent
  FOLLOW_UP        // followâ€‘up email sent
  REPLIED          // lead replied
  UNSUBSCRIBED     // opted out
  BOUNCED          // invalid email
}