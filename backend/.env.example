# SQLite database (development)
DATABASE_URL="file:./dev.db"

# Server configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN="http://localhost:5173"
MAX_FILE_SIZE_MB=10

# Email service: 'ethereal' (default) or 'smtp'
EMAIL_SERVICE=smtp

# Email (Ethereal works out of the box, no config needed for dev)
EMAIL_FROM="Your Name <yourgmail@gmail>"
# For production:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=yourgmail@gmail.com
SMTP_PASS=your smtp pass here

# IMAP settings (for receiving replies)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=youremail@gmail.com
IMAP_PASS=your imap pass here
IMAP_TLS=true
IMAP_MAILBOX=INBOX
IMAP_POLL_INTERVAL=300000  # 5 minutes in milliseconds
IMAP_CONN_TIMEOUT=30000     # 30 seconds (in milliseconds)

# AI Provider: mock, openai, gemini, ollama
AI_PROVIDER=gemini

# OpenAI (if using)
OPENAI_API_KEY=openai-key
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini (if using)
GEMINI_API_KEY=your_gemini_api_key_goes_here
GEMINI_MODEL=gemini-2.5-flash-lite

# Ollama (if using)
OLLAMA_URL=http://localhost:11434
OLLAMA_FAST_MODEL=llama3.2:1b
OLLAMA_POWERFUL_MODEL=llama3.1:8b